<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Admin Panel"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/heading"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/opd"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/ic_local_hospital_black_24dp"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/ipd_btn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/ic_hotel_black_24dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear1_category_layout"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/ic_add_alert_black_24dp"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/leave"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/ic_speaker_notes_black_24dp"/>


    </LinearLayout>

</RelativeLayout>