<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDetailsActivity">

    <TextView
        android:id="@+id/patient_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/patient_problem"
        android:gravity="center"
        android:layout_below="@id/patient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/patient_other_details"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_below="@id/patient_problem"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/patient_sex"
        android:gravity="center"
        android:layout_below="@id/patient_other_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/patient_age"
        android:gravity="center"
        android:layout_below="@id/patient_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/transfer_ipd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:text="Transfer to IPD"
        android:layout_below="@id/patient_age"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
    <Button
        android:id="@+id/transfer_to_doctor"
        android:layout_below="@id/transfer_ipd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:text="Transfer to a Doctor"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
    <Button
        android:id="@+id/cancel_appoinment"
        android:layout_below="@id/transfer_to_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:text="Cancel Appoinment"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />
    <Button
        android:id="@+id/complete_appoinment"
        android:layout_below="@id/cancel_appoinment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:text="Complete Appoinment"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>