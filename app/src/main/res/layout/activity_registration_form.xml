<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationFormActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Form"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:fontFamily="sans-serif-light"/>

            <EditText
                android:id="@+id/register_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_design"
                android:hint="Name"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:hint="Email"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_design"
                android:hint="Phone Number"
                android:inputType="number"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_design"
                android:hint="Password"
                android:layout_below="@id/register_phone_number_input"
                android:inputType="textPassword"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_qualification_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_design"
                android:hint="Qualification (Proper Format)"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_fellowships_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_design"
                android:hint="Fellowship and Membership"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_awards_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_design"
                android:hint="Awards and achievements"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/register_area_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/input_design"
                android:hint="Area of expertise"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:textSize="17sp" />
            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/register_password_input"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttons"
                android:padding="0dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:text="Create Account"
                android:textColor="#ffffff"
                />



        </LinearLayout>

    </ScrollView>


</LinearLayout>